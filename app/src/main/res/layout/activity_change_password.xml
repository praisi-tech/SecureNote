<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Icon -->
        <ImageView
            android:id="@+id/ivLockIcon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_lock_outline"
            app:tint="@color/peri_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change PIN"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/ivLockIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Please enter your current PIN and choose a new one"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" />

        <!-- Current PIN Input Container -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCurrentPin"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Current PIN"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/peri_primary"
            app:boxStrokeColor="@color/peri_primary"
            app:hintTextColor="@color/peri_primary"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurrentPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:paddingStart="40dp"
                android:paddingEnd="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- New PIN Input Container -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewPin"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="New PIN"
            app:startIconDrawable="@drawable/ic_lock_open"
            app:startIconTint="@color/peri_primary"
            app:boxStrokeColor="@color/peri_primary"
            app:hintTextColor="@color/peri_primary"
            app:helperText="Must be 4-6 digits"
            app:helperTextTextColor="@color/text_tertiary"
            app:layout_constraintTop_toBottomOf="@id/tilCurrentPin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingStart="40dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm PIN Input Container -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmPin"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Confirm New PIN"
            app:startIconDrawable="@drawable/ic_check_circle"
            app:startIconTint="@color/peri_primary"
            app:boxStrokeColor="@color/peri_primary"
            app:hintTextColor="@color/peri_primary"
            app:layout_constraintTop_toBottomOf="@id/tilNewPin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:paddingStart="40dp"
                android:paddingEnd="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSavePin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Save New PIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/peri_primary"
            android:textColor="@color/text_on_primary"
            app:cornerRadius="12dp"
            app:rippleColor="@color/fab_ripple"
            app:layout_constraintTop_toBottomOf="@id/tilConfirmPin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" />

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="14sp"
            android:textColor="@color/peri_primary"
            app:rippleColor="@color/peri_primary_10"
            app:layout_constraintTop_toBottomOf="@id/btnSavePin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>