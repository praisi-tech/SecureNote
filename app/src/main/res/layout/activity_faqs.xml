<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find answers to common questions about SecureNote"
            android:textSize="14sp"
            android:textColor="#757575"
            android:paddingBottom="24dp" />

        <!-- Q1 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="Q"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/circle_accent"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvFaqQ1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What is SecureNote?"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvFaqA1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SecureNote is an encrypted note app. Your notes are stored locally and protected with a master PIN and AES-256 encryption."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Q2 Card - UPDATED -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="Q"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/circle_accent"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvFaqQ2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What happens if I forget my master PIN?"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvFaqA2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you forget your PIN, you'll need to set a new PIN. Don't worryâ€”your notes will not be deleted and will remain safe on your device."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Q3 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="Q"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/circle_accent"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvFaqQ3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Are my notes stored online?"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvFaqA3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. All notes are stored locally on your device in an encrypted Room database. Encrypted backups are also stored locally unless you move them to cloud storage yourself."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Q4 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="Q"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/circle_accent"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvFaqQ4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What does the backup password protect?"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvFaqA4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The backup password encrypts the exported backup file. Without this password, the backup file cannot be decrypted or imported."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</ScrollView>